page {
    background: #f3f3f3;
}

.reply {
    padding: 16rpx;
}

.reply_item {
    background: #fff;
    border-radius: 24rpx;
    display: flex;
    margin-bottom: 16rpx;
    padding: 32rpx 24rpx;
}

.reply_item:last-child {
    margin: 0;
}

.reply_img {
    border-radius: 64rpx;
    height: 64rpx;
    margin-right: 20rpx;
    width: 64rpx;
}

.reply_cont {
    width: 526rpx;
}

.reply_cont view:first-child {
    color: #333;
    font-size: 32rpx;
    font-weight: 600;
}

.reply_cont view:nth-child(2) {
    color: #999;
    font-size: 24rpx;
    font-weight: 600;
    margin-top: 16rpx;
}

.reply_cont view:last-child {
    border-radius: 12rpx;
    color: #333;
    font-size: 28rpx;
    height: 48rpx;
    line-height: 48rpx;
    margin-top: 20rpx;
    overflow: hidden;
    padding: 0 16rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.reply_info {
    align-items: center;
    display: flex;
    width: 60rpx;
}

.reply_info view {
    background: #ff5039;
    border-radius: 14rpx;
    height: 14rpx;
    margin-right: 20rpx;
    width: 14rpx;
}

.reply_info>image {
    height: 26rpx;
    width: 26rpx;
}