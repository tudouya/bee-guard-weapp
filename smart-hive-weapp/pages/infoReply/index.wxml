<view class="reply">
    <view bindtap="handleTopicDetails" class="reply_item" data-item="{{item}}" wx:for="{{data}}" wx:key="index">
        <image class="reply_img" src="{{item.reply_user_avatar}}" wx:if="{{item.reply_user_avatar}}"></image>
        <image class="reply_img" src="https://dtm123.com:7803/targets/image/images/avatar.png" wx:else></image>
        <view class="reply_cont">
            <view>{{item.reply_user_nick}}</view>
            <view>回复了你 {{item.time}}</view>
            <view>{{item.reply_content}}</view>
        </view>
        <view class="reply_info">
            <text wx:if="{{item.is_see}}"></text>
            <view wx:else></view>
            <image src="https://dtm123.com:7803/targets/image/images/right.png"></image>
        </view>
    </view>
    <view style="padding:24rpx 0rpx;text-align:center;font-size:24rpx;color:#999;" wx:if="{{data.length===0}}">--暂无数据--</view>
</view>
