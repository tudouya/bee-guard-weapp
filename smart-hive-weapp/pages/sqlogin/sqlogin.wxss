.loading-container {
    width: 100%;
    height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
}

.loading-content {
    text-align: center;
    color: white;
}

.app-logo {
    width: 120rpx;
    height: 120rpx;
    margin-bottom: 40rpx;
    border-radius: 20rpx;
}

.app-name {
    display: block;
    font-size: 48rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.loading-text {
    display: block;
    font-size: 28rpx;
    opacity: 0.8;
}