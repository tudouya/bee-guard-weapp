page {
    background: #f3f3f3;
}

.search-title {
    position: fixed;
    top: 0;
    width: 100%;
}

.search-header {
    background: #fff;
    padding: 24rpx 16rpx;
}

.search-header,.search-search {
    align-items: center;
    display: flex;
}

.search-search {
    border: 2rpx solid #ffc601;
    border-radius: 64rpx;
    color: #3b3a38;
    font-size: 28rpx;
    height: 64rpx;
    padding: 0 28rpx;
}

.search-search,.search-search input {
    flex: 1 1;
}

.input-placeholder {
    color: #b4b4b4;
    font-size: 28rpx;
}

.search_sub {
    background: #f8d541;
    border-radius: 56rpx;
    color: #333;
    font-size: 28rpx;
    font-weight: 600;
    height: 56rpx;
    line-height: 56rpx;
    margin: 0rpx 24rpx;
    text-align: center;
    width: 100rpx;
}

.search_modal {
    background: #fff;
    height: calc(100vh - 106rpx);
    margin-top: 106rpx;
}

.search_modal_title {
    color: #323539;
    font-size: 32rpx;
    font-weight: 600;
    padding: 8rpx 24rpx 24rpx;
}

.search_modal_tag {
    display: flex;
    flex-wrap: wrap;
    padding: 0rpx 24rpx;
}

.search_modal_item {
    background: #f2f2f2;
    border-radius: 56rpx;
    color: #62615f;
    font-size: 24rpx;
    height: 56rpx;
    line-height: 56rpx;
    margin-bottom: 12rpx;
    margin-right: 12rpx;
    padding: 0rpx 20rpx;
    text-align: center;
}

.info_cont {
    padding-bottom: 24rpx;
    padding-top: 133rpx;
}

.info_main {
    background: #fff;
    border-radius: 24rpx;
}

.info_item_title {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    color: #323539;
    display: -webkit-box;
    font-size: 32rpx;
    font-weight: 600;
    height: 100rpx;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.info_item_type {
    color: #8f9498;
    font-size: 24rpx;
    font-weight: 600;
    margin-top: 12rpx;
}

.info_item_one {
    border-bottom: 2rpx solid #f3f3f3;
    display: flex;
    padding: 32rpx 24rpx;
}

.info_item_one_left {
    flex: 1 1;
}

.info_item_img {
    border-radius: 16rpx;
    height: 154rpx;
    overflow: hidden;
    width: 32%;
}