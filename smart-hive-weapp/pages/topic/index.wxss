page {
    background: #f3f3f3;
}

.topic-title {
    position: fixed;
    top: 0;
    width: 100%;
}

.topic-header {
    background: #fff;
    padding: 24rpx 16rpx;
}

.topic-header,.topic-search {
    align-items: center;
    display: flex;
}

.topic-search {
    background: #f5f7f7;
    border-radius: 64rpx;
    flex: 1 1;
    height: 64rpx;
    padding: 0 28rpx;
}

.topic-search-icon {
    height: 24rpx;
    margin-right: 16rpx;
    width: 24rpx;
}

.topic-search input {
    flex: 1 1;
}

.topic-warn {
    position: relative;
}

.topic-warn>image {
    height: 40rpx;
    margin: 0 8rpx 0 24rpx;
    width: 40rpx;
}

.topic-warn-num {
    background: red;
    border-radius: 24rpx;
    color: #fff;
    font-size: 14rpx;
    padding: 1rpx 6rpx;
    position: absolute;
    right: 12rpx;
    top: -10rpx;
}

.topic-type {
    align-items: center;
    background: #fff;
    border-bottom-left-radius: 24rpx;
    border-bottom-right-radius: 24rpx;
    display: flex;
    overflow: auto;
    padding: 0 16rpx 20rpx;
}

.topic-type::-webkit-scrollbar {
    height: 0!important;
}

.topic-type-list {
    align-items: center;
    border: 1px solid #9b9b9b;
    border-radius: 52rpx;
    display: flex;
    font-size: 28rpx;
    height: 52rpx;
    justify-content: center;
    margin-right: 12rpx;
    padding: 0 16rpx;
    white-space: nowrap;
}

.topic-type-list:last-child {
    margin: 0;
}

.topic-type-list.topic-type-list-active {
    background: #f8d541;
    border: 1px solid #f8d541;
    font-weight: 600;
}

.topic-con {
    padding-top: 208rpx;
}

.topic-con-list {
    background: #fff;
    border-radius: 24rpx;
    margin-bottom: 16rpx;
    padding: 26rpx 24rpx 24rpx;
}

.topic-con-list:last-child {
    margin: 0;
}

.topic-con-list-header {
    align-items: center;
    display: flex;
    margin-bottom: 20rpx;
}

.topic-con-list-img {
    border-radius: 64rpx;
    height: 64rpx;
    margin-right: 24rpx;
    width: 64rpx;
}

.topic-con-list-con {
    flex: 1 1;
}

.topic-con-list-con-header {
    align-items: center;
    display: flex;
    margin-bottom: 8rpx;
}

.topic-con-list-con-header-nick {
    color: #323539;
    font-size: 32rpx;
    margin-right: 12rpx;
    max-width: 280rpx;
}

.topic-con-list-con-header-nick,.topic-con-list-con-header-type {
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.topic-con-list-con-header-type {
    background: #fff3ef;
    border-radius: 8rpx;
    color: #ff652f;
    font-size: 28rpx;
    height: 36rpx;
    line-height: 36rpx;
    max-width: 268rpx;
    padding: 0 8rpx;
}

.topic-con-list-con-footer {
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.topic-con-list-con-footer-time {
    color: #8f9498;
    font-size: 24rpx;
    font-weight: 600;
}

.topic-con-list-con-footer-num {
    align-items: center;
    display: flex;
}

.topic-con-list-con-footer-num image {
    height: 18rpx;
    margin-right: 4rpx;
    width: 18rpx;
}

.topic-con-list-con-footer-num text {
    color: #323539;
    font-size: 24rpx;
}

.topic-con-list-footer {
    background: #f5f7f6;
    border-radius: 24rpx;
    padding: 26rpx 24rpx 24rpx;
}

.topic-con-list-footer-desc {
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-wrap: break-word;
    color: #323539;
    display: -webkit-box;
    font-size: 28rpx;
    font-weight: 600;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
}

.topic-con-list-footer-img {
    margin-top: 20rpx;
}

.topic-con-list-footer-img image {
    height: 208rpx;
    margin-right: 2%;
    width: 32%;
}

.topic-con-list-footer-img image:last-child {
    margin: 0;
}