.container { 
  display: block;
  padding: 0;
  height: auto;
  box-sizing: border-box;
  background: #f3f3f3; 
}
.content { padding: 0 16rpx; }

.login-card { background: #fff; border-radius: 16rpx; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08); padding: 24rpx 16rpx; }
.header { margin-bottom: 20rpx; }
.title { font-size: 36rpx; font-weight: 700; color: #333; }
.subtitle { display: block; margin-top: 8rpx; font-size: 26rpx; color: #666; }

.fallback { display: flex; justify-content: center; align-items: center; gap: 8rpx; margin-top: 16rpx; }
.fallback-text { font-size: 24rpx; color: #999; }
.fallback-link { font-size: 24rpx; color: #07c160; }

.agreement { margin-top: 20rpx; font-size: 22rpx; color: #999; text-align: center; }
.agreement .link { color: #07c160; }

