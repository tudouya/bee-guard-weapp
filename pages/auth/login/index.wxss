.page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: linear-gradient(180deg, #e3f7ec 0%, #ffffff 65%);
  padding: 48rpx 40rpx 32rpx;
  box-sizing: border-box;
}
.top { display: flex; flex-direction: column; align-items: center; padding-top: 40rpx; }
.logo-wrap { margin-top: 40rpx; margin-bottom: 20rpx; }
.logo { width: 160rpx; height: 160rpx; border-radius: 50%; background: #ffffff; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); display: flex; align-items: center; justify-content: center; overflow: hidden; }
.logo-img { width: 100%; height: 100%; border-radius: 50%; }
.app-name { margin-top: 12rpx; font-size: 44rpx; font-weight: 700; color: #333; }
.subtitle { margin-top: 8rpx; font-size: 26rpx; color: #666; }

.actions { margin-top: 60rpx; }
/* 清理未使用：备用登录入口已移除 */

.hint { margin-top: 16rpx; text-align: center; font-size: 22rpx; color: #9aa0a6; }

.footer { margin-top: 40rpx; text-align: center; font-size: 22rpx; color: #999; }
.agree-row {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}
.link { color: #07c160; }
.agree-text { color: #999; }

/* Login button look when disabled (agreement not checked) */
.login-btn { transition: background-color .2s ease, box-shadow .2s ease; }
.login-btn[disabled] {
  background-color: #bfead1; /* lighter theme green */
  color: #fff;
  box-shadow: none;
  opacity: 1; /* avoid dim gray look */
}

.privacy-mask {
  position: fixed;
  z-index: 999;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.privacy-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.55);
}
.privacy-modal {
  position: relative;
  width: 92%;
  max-height: 86vh;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 32rpx 32rpx;
  box-sizing: border-box;
  box-shadow: 0 24rpx 60rpx rgba(0, 0, 0, 0.18);
  display: flex;
  flex-direction: column;
}
.privacy-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.privacy-header-title { font-size: 32rpx; font-weight: 600; color: #111; }
.privacy-close { font-size: 44rpx; color: #999; padding: 0 8rpx; }
.privacy-scroll {
  max-height: 60vh;
  padding-right: 12rpx;
  box-sizing: border-box;
}
.privacy-section { margin-bottom: 28rpx; }
.privacy-title { font-size: 32rpx; font-weight: 600; color: #111; margin-bottom: 16rpx; }
.privacy-subtitle { font-size: 30rpx; font-weight: 600; color: #333; margin-bottom: 12rpx; }
.privacy-paragraph { font-size: 26rpx; color: #555; line-height: 1.6; margin-bottom: 12rpx; }
.privacy-item { font-size: 26rpx; color: #333; font-weight: 500; margin: 12rpx 0 8rpx; }
.privacy-bullet { font-size: 26rpx; color: #555; line-height: 1.6; padding-left: 20rpx; }
.privacy-confirm { margin-top: 24rpx; }
