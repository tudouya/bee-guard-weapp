page {
  background: #f5f7f5;
}

.detection {
  padding: 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.detection-summary {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.06);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.detection-summary-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detection-summary-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.detection-summary-refresh {
  font-size: 24rpx;
  color: #07c160;
}

.detection-summary-metrics {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 18rpx;
}

.detection-summary-item {
  background: #f6fdf9;
  border-radius: 14rpx;
  padding: 16rpx 18rpx;
}

.detection-summary-label {
  font-size: 22rpx;
  color: #64727c;
}

.detection-summary-value {
  display: block;
  margin-top: 8rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.detection-summary-value--highlight {
  color: #07c160;
}

.detection-summary-tip {
  font-size: 22rpx;
  color: #64727c;
}

.detection-tabs {
  display: flex;
  gap: 16rpx;
}

.detection-tab {
  flex: 1;
  background: #ffffff;
  border-radius: 999rpx;
  padding: 18rpx 12rpx;
  text-align: center;
  font-size: 26rpx;
  color: #64727c;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 10rpx;
}

.detection-tab--active {
  background: #07c160;
  color: #ffffff;
  box-shadow: 0 10rpx 20rpx rgba(7, 193, 96, 0.18);
}

.detection-tab-count {
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 10rpx;
  background: rgba(255, 255, 255, 0.18);
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #ffffff;
  line-height: 32rpx;
}

.detection-body {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.detection-loading,
.detection-error,
.detection-empty {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 48rpx 24rpx;
  text-align: center;
  color: #64727c;
}

.detection-error-text {
  display: block;
  margin-bottom: 24rpx;
}

.detection-empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 16rpx;
}

.detection-empty-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f1f1f;
}

.detection-empty-desc {
  display: block;
  margin: 12rpx 0 24rpx;
  font-size: 24rpx;
  color: #64727c;
}

.detection-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.detection-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 35, 49, 0.05);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detection-card-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detection-card-code {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f1f1f;
}

.detection-card-status {
  font-size: 22rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
}

.detection-card-status-assigned { background: rgba(7, 193, 96, 0.12); color: #07c160; }
.detection-card-status-used { background: rgba(144, 147, 153, 0.16); color: #909399; }
.detection-card-status-expired { background: rgba(255, 77, 79, 0.12); color: #ff4d4f; }

.detection-card-meta {
  font-size: 24rpx;
  color: #454f57;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.detection-card-actions {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.detection-card-btn {
  width: 100%;
  background: #f2f4f5;
  color: #3c434a;
}

.detection-card-secondary .detection-card-btn {
  background: #07c160;
  color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.35);
}

.detection-card-secondary .detection-card-btn:active {
  background: #06a552;
}

.detection-card-btn--muted {
  background: #f2f4f5;
  color: #8a9599;
  box-shadow: none;
}

.detection-card-secondary { width: 100%; }
