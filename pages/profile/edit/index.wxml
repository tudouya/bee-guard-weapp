<view class="page">
  <view class="section-title">基本信息</view>

  <view class="cell">
    <view class="cell-label">头像</view>
    <view class="cell-value">
      <button class="avatar-btn" open-type="chooseAvatar" bindchooseavatar="onChooseAvatar" hover-class="none">
        <image class="avatar" src="{{avatarUrl || defaultAvatar}}" mode="aspectFill"></image>
      </button>
    </view>
  </view>

  <view class="cell">
    <view class="cell-label">账号</view>
    <view class="cell-value cell-value--text">{{phoneMasked || '—'}} </view>
  </view>

  <view class="cell">
    <view class="cell-label">昵称</view>
    <view class="cell-value cell-value--input">
      <input type="nickname" placeholder="请输入昵称" value="{{nickname}}" bindinput="onNicknameInput" maxlength="20" />
    </view>
  </view>

  <view class="actions">
    <button class="u-btn u-btn-primary u-btn--md u-btn--pill u-btn-block" bindtap="onSave" loading="{{saving}}" disabled="{{saving}}">保存</button>
    <button class="u-btn u-btn--md u-btn-block logout-btn" bindtap="onLogout">退出登录</button>
  </view>
</view>
