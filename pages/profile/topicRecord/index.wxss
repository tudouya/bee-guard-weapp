page { background:#f3f3f3; }
.topicRecord-header { align-items:center; background:#fff; display:flex; height:88rpx; justify-content:space-around; position:fixed; top:0; left:0; right:0; z-index:9; }
.topicRecord-header-list { border-bottom:6rpx solid transparent; color:#666; font-size:28rpx; height:82rpx; line-height:82rpx; }
.topicRecord-header-list.topicRecord-header-list-active { border-color:#07c160; color:#07c160; font-weight:700; }
.topicRecord-con { padding: 104rpx 16rpx 16rpx; }
.topicRecord-con-list { background:#fff; border-radius:16rpx; margin-bottom:16rpx; padding:26rpx 24rpx 24rpx; box-shadow:0 2rpx 8rpx rgba(0,0,0,0.06); }
.topicRecord-con-list:last-child { margin:0; }
.topicRecord-con-list-top { align-items:center; display:flex; }
.topicRecord-con-list-avatar { border-radius:64rpx; height:64rpx; margin-right:20rpx; width:64rpx; }
.topicRecord-con-list-right { flex:1 1; }
.topicRecord-con-list-right-top { align-items:center; display:flex; margin-bottom:8rpx; }
.topicRecord-con-list-nick { color:#333; font-size:32rpx; margin-right:12rpx; max-width:320rpx; font-weight:600; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; }
.topicRecord-con-list-type { background:rgba(7,193,96,0.12); border-radius:999rpx; color:#07c160; font-size:22rpx; height:32rpx; line-height:32rpx; max-width:208rpx; padding:0 10rpx; font-weight:600; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; }
.topicRecord-con-list-time { color:#999; font-size:24rpx; font-weight:600; }
.topicRecord-con-list-desc { display:flex; padding:16rpx 16rpx 0 84rpx; }
.topicRecord-con-list-desc view { background:#f7f7f7; color:#333; flex:1 1; font-size:28rpx; height:48rpx; line-height:48rpx; margin-top:16rpx; overflow:hidden; padding:0 16rpx; text-overflow:ellipsis; white-space:nowrap; }
.empty { padding:24rpx 0rpx; text-align:center; font-size:24rpx; color:#999; }
