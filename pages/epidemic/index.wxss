.container { display: block; padding: 0 16rpx; box-sizing: border-box; background: #f3f3f3; }

/* 顶部关键指标卡片（与首页左右边距一致） */
.stats-cards { display: flex; gap: 12rpx; margin: 16rpx 0 16rpx; }
.card-item { flex: 1; background: #fff; border-radius: 16rpx; padding: 24rpx 12rpx; min-height: 150rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08); text-align: center; }
.card-number { display: block; font-size: 52rpx; font-weight: 800; color: #07c160; line-height: 1.25; }
.card-label { display: block; margin-top: 10rpx; font-size: 24rpx; color: #666; letter-spacing: 1rpx; }

.map-container { background: #fff; border-radius: 16rpx; padding: 16rpx; margin-bottom: 16rpx; text-align: center; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.06); }

.map-placeholder { margin-bottom: 12rpx; }

.map-text { display: none; }

.map-desc { font-size: 24rpx; color: #666; }

.map-btn { width: 100%; height: 72rpx; font-size: 28rpx; line-height: 72rpx; padding: 0; margin: 0; border-radius: 12rpx; }

.data-list { background: #fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.06); }

.list-header { display: flex; justify-content: flex-start; align-items: center; margin-bottom: 12rpx; }

.list-title { font-size: 30rpx; font-weight: 700; color: #333; }

.list-body {
  padding: 24rpx 0;
  text-align: center;
}

.loading-text,
.empty-text {
  font-size: 24rpx;
  color: #999;
}

.news-item { display: flex; justify-content: space-between; align-items: center; padding: 18rpx 0; border-bottom: 1rpx solid #f0f0f0; }

.news-item:last-child {
  border-bottom: none;
}

.news-content {
  flex: 1;
}

.news-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.news-date {
  font-size: 24rpx;
  color: #999;
}

.news-level {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.level-high {
  background: #fff2f0;
  color: #ff4d4f;
}

.level-medium {
  background: #fff7e6;
  color: #faad14;
}

.level-low {
  background: #f6ffed;
  color: #52c41a;
}
