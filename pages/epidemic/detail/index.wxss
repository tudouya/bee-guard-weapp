.page-container {
  min-height: 100vh;
  padding: 24rpx 28rpx 48rpx;
  box-sizing: border-box;
  background: #f3f3f3;
}

.article-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 36rpx 32rpx 44rpx;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.05);
}

.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 26rpx;
}

.article-header {
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 24rpx;
  margin-bottom: 28rpx;
}

.article-tag {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  color: #07c160;
  font-weight: 600;
  padding: 4rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(7, 193, 96, 0.08);
  margin-bottom: 16rpx;
}

.article-title {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1a1a1a;
  line-height: 1.4;
}

.article-meta {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 10rpx;
  font-size: 24rpx;
  color: #8c8c8c;
}

.meta-item {
  display: inline-flex;
  align-items: center;
}

.meta-divider {
  color: #d9d9d9;
  font-size: 24rpx;
  padding: 0 6rpx;
}

.article-badges {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.badge {
  font-size: 24rpx;
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: #f5f5f5;
  color: #595959;
}

.level-badge.level-high { background: #fff2f0; color: #ff4d4f; }
.level-badge.level-medium { background: #fff7e6; color: #faad14; }
.level-badge.level-low { background: #f6ffed; color: #52c41a; }

.region-badge {
  background: rgba(45, 183, 245, 0.12);
  color: #1890ff;
}

.article-summary {
  background: rgba(7, 193, 96, 0.06);
  border-radius: 16rpx;
  padding: 24rpx 26rpx;
  margin-bottom: 28rpx;
}

.summary-label {
  display: block;
  font-size: 24rpx;
  color: #07c160;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.summary-text {
  font-size: 28rpx;
  color: #404040;
  line-height: 1.7;
}

.article-body {
  font-size: 30rpx;
  color: #333;
  line-height: 1.75;
}

.article-html {
  display: block;
  word-break: break-word;
}
