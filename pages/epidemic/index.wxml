<view class="container">
  <view class="content">
    <!-- 顶部关键指标（卡片样式） -->
    <view class="stats-cards">
      <view class="card-item">
        <text class="card-number">1,256</text>
        <text class="card-label">检测点</text>
      </view>
      <view class="card-item">
        <text class="card-number">89</text>
        <text class="card-label">疫情地区</text>
      </view>
      <view class="card-item">
        <text class="card-number">23</text>
        <text class="card-label">高风险区</text>
      </view>
    </view>
    
    <view class="map-container">
      <view class="map-placeholder">
        <text class="map-text">疫情地图</text>
        <text class="map-desc">点击查看详细数据</text>
      </view>
      <button class="map-btn u-btn u-btn-primary u-btn--lg" bindtap="viewMap">查看地图</button>
    </view>
    
    <view class="data-list">
      <view class="list-header">
        <text class="list-title">最新疫情通报</text>
      </view>
      <view class="list-body" wx:if="{{loading}}">
        <text class="loading-text">加载中...</text>
      </view>
      <view class="list-body" wx:elif="{{!loading && bulletins.length === 0}}">
        <text class="empty-text">暂无疫情通报</text>
      </view>
      <block wx:else>
        <view class="news-item" wx:for="{{bulletins}}" wx:key="id" bindtap="viewNewsDetail" data-id="{{item.id}}">
          <view class="news-content">
            <text class="news-title">{{item.title}}</text>
            <text class="news-date">{{item.publishedAt || ''}}</text>
          </view>
          <view class="news-level level-{{item.riskLevel || 'low'}}">{{item.riskLevelText || ''}}</view>
        </view>
      </block>
    </view>
  </view>
</view>
