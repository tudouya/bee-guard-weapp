.container { 
  /* 覆盖全局 .container，去除固定内边距与高度，避免顶部空白 */
  display: block;
  padding: 0;
  height: auto;
  box-sizing: border-box;
  background: #f3f3f3; 
}
.content { padding: 8rpx 16rpx 0; }

.preset-bar { display: flex; flex-wrap: wrap; gap: 12rpx; margin: 8rpx 0 16rpx; }
.preset-bar .u-btn { padding: 0 20rpx; }

.survey-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
  padding: 24rpx 16rpx;
}

.header { margin-bottom: 16rpx; }
.title { font-size: 34rpx; font-weight: 600; color: #333; }
.subtitle { display: block; margin-top: 6rpx; font-size: 24rpx; color: #999; }

.form { display: flex; flex-direction: column; gap: 20rpx; }
.section-title { font-size: 30rpx; color: #333; font-weight: 600; margin: 6rpx 0 8rpx; }
.form-item {}
.form-label { font-size: 28rpx; color: #333; margin-bottom: 10rpx; }
.form-label .req { color: #e54d42; margin-right: 8rpx; }

.input-wrap { background: #f7f7f7; border-radius: 36rpx; height: 72rpx; padding: 0 16rpx; display: flex; align-items: center; }
.input-wrap input { flex: 1; font-size: 30rpx; color: #333; }

.flex-row { display: flex; gap: 12rpx; }
.picker-cell { min-width: 220rpx; background: #f7f7f7; border-radius: 36rpx; height: 72rpx; padding: 0 20rpx; display: flex; align-items: center; font-size: 28rpx; color: #333; }

.radio-group, .checkbox-group { display: flex; flex-wrap: wrap; gap: 12rpx 12rpx; }
.radio-item, .checkbox-item { 
  display: inline-flex; 
  align-items: center; 
  padding: 10rpx 18rpx; 
  background: #f7f7f7; 
  border: 1rpx solid #ececec; 
  border-radius: 9999rpx; 
  font-size: 28rpx; 
  color: #333; 
}

.chip-text { font-size: 28rpx; color: #333; }
.radio-item radio, .checkbox-item checkbox { 
  transform: scale(0.9); 
  margin-right: 10rpx; 
}

/* 清理未使用：.divider 与 .textarea */

.rank-list { display: flex; flex-direction: column; gap: 12rpx; }
.rank-item { display: flex; justify-content: space-between; align-items: center; padding: 10rpx 0; }
.rank-label { font-size: 28rpx; color: #333; }

.med-list { display: flex; flex-direction: column; gap: 8rpx; }
.med-item {}
