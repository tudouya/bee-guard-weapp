.container {
  /* 覆盖全局 .container 的 flex 等样式，确保与首页一致的内容宽度表现 */
  display: block;
  padding: 0;
  background: #f3f3f3;
  height: auto;
  box-sizing: border-box;
}


.tabs {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  height: 88rpx;
  margin: 0 0 12rpx 0;
  /* 铺满整行，与标题栏视觉融合 */
  margin-left: -16rpx;
  margin-right: -16rpx;
  border: 0;
  border-radius: 0;
  box-shadow: none;
}

.tab-item {
  flex: 1;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  height: 82rpx;
  line-height: 82rpx;
  border-bottom: 6rpx solid transparent;
  transition: color 0.2s ease;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 选中态：主色 + 底部高亮线（无整框边框） */
.tab-item.active {
  color: #07c160;
  font-weight: 700;
  border-bottom-color: #07c160;
}

/* 去除以往激活态的背景与描边效果（保持纯净的下边框高亮） */
.tab-item.active::after { content: none; display: none; }

.content {
  /* 与首页左右边距保持 16rpx 一致 */
  padding: 0 16rpx;
}

/* 清理未使用样式：page-header/page-title/link-btn/segmented/seg-chip/section-title/tab-content */

.detection-card {
  background: #fff;
  border-radius: 16rpx;
  /* 调整左右内边距以减小视觉边距，总体与首页观感一致 */
  padding: 24rpx 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
  margin-top: 12rpx; /* 统一卡片间距 */
}

/* 提高“没有检测号？”模块与上方表单之间的间距 */
.detection-card--spaced { margin-top: 12rpx; }

/* 首个卡片与顶部的距离更紧凑 */
.content .detection-card:first-of-type { margin-top: 8rpx; }

/* 结果查询卡片与上方申请区域间距增大 */
.detection-card--results { margin-top: 28rpx; }

.card-header {
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
}

.card-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.card-subtitle {
  display: block; /* text 默认 inline，margin 不生效，强制块级 */
  font-size: 26rpx;
  color: #666;
  margin-bottom: 32rpx; /* 明显增大与按钮的间距 */
}

