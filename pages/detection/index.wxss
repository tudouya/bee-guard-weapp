.container {
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
}

.tabs {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 32rpx 0;
  color: #666;
  font-size: 30rpx;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.tab-content {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.detection-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.card-header {
  margin-bottom: 24rpx;
}

.card-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
}

.card-content {
  
}

.card-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 结果查询相关样式 */
.search-bar {
  display: flex;
  gap: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 24rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 2rpx solid #e5e5e5;
  font-size: 28rpx;
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  padding: 0;
  margin: 0;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.item-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-completed {
  background: #e8f5e8;
  color: #52c41a;
}

.status-processing {
  background: #fff7e6;
  color: #faad14;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-date, .item-type {
  font-size: 26rpx;
  color: #666;
}