.container {
  /* 覆盖全局 .container 的 flex 等样式，确保与首页一致的内容宽度表现 */
  display: block;
  padding: 0;
  background: #f3f3f3;
  height: auto;
  box-sizing: border-box;
}


.tabs {
  display: flex;
  background: #fff;
  /* 放入 .content 后，与表单视觉宽度完全一致 */
  margin: 0 0 24rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 8rpx;
  color: #666;
  font-size: 28rpx;
  position: relative;
  transition: all 0.3s ease;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tab-item.active {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 3rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.content {
  /* 与首页左右边距保持 16rpx 一致 */
  padding: 0 16rpx;
}

.tab-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detection-card {
  background: #fff;
  border-radius: 16rpx;
  /* 调整左右内边距以减小视觉边距，总体与首页观感一致 */
  padding: 24rpx 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
}

/* 提高“没有检测号？”模块与上方表单之间的间距 */
.detection-card--spaced {
  margin-top: 16rpx;
}

.card-header {
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 18rpx;
}

.card-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.card-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 18rpx;
}

.card-content {
  
}

/* 表单样式 */
.form-item {
  margin-bottom: 20rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  color: #333;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.form-input-wrapper {
  background: #f7f7f7;
  border-radius: 36rpx;
  height: 72rpx;
  padding: 0 16rpx;
  display: flex;
  align-items: center;
}

.form-input {
  color: #333;
  font-size: 32rpx;
  flex: 1;
}

.form-input::placeholder {
  color: #999;
  font-size: 32rpx;
}

/* 套餐选择样式 */
.package-list {
  margin: 16rpx 0;
}

.package-item {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 18rpx 16rpx;
  margin-bottom: 10rpx;
  transition: all 0.2s ease;
}

.package-item.selected {
  background: #fff;
  border: 2rpx solid rgba(7, 193, 96, 0.45);
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}

.package-item:active {
  transform: scale(0.98);
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.package-name {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}

.package-price {
  color: #d46b08;
  font-size: 36rpx;
  font-weight: 700;
}

.package-desc {
  color: #666;
  font-size: 24rpx;
  line-height: 1.4;
}

/* 登录提示样式 */
.login-tip {
  background: #fff3ef;
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tip-text {
  color: #666;
  font-size: 28rpx;
}

.btn-login {
  border-radius: 32rpx;
  font-size: 24rpx;
  font-weight: 600;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 20rpx;
  text-align: center;
  border: none;
  min-width: 120rpx;
  box-shadow: 0 1rpx 3rpx rgba(7, 193, 96, 0.3);
}

.btn-primary {
  border-radius: 68rpx;
  font-size: 28rpx;
  font-weight: 600;
  height: 68rpx;
  width: 100%;
  border: none;
  margin-top: 24rpx;
  box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.35);
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 3rpx rgba(248, 213, 65, 0.5);
}

/* 结果查询相关样式 */
.search-bar {
  display: flex;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 68rpx;
  padding: 0 18rpx;
  background: #fff;
  border-radius: 8rpx;
  border: 1rpx solid #e8e8e8;
  font-size: 26rpx;
  box-shadow: 0 1rpx 2rpx rgba(0,0,0,0.04);
}

.search-btn {
  width: 88rpx;
  height: 68rpx;
  font-size: 24rpx;
  line-height: 68rpx;
  padding: 0;
  margin: 0;
  border-radius: 8rpx;
  box-shadow: 0 1rpx 3rpx rgba(7, 193, 96, 0.3);
}

.empty-state {
  text-align: center;
  padding: 60rpx 16rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
}

.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.item-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.status-completed {
  background: #e8f5e8;
  color: #52c41a;
}

.status-processing {
  background: #fff7e6;
  color: #faad14;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-date, .item-type {
  font-size: 26rpx;
  color: #666;
}
