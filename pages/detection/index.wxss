/* 表单样式 */
.form-item {
  margin-bottom: 20rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label { color: #333; font-size: 28rpx; margin-bottom: 8rpx; }

.form-input-wrapper {
  background: #f7f7f7;
  border-radius: 32rpx;
  height: 56rpx;
  padding: 0 12rpx;
  display: flex;
  align-items: center;
}

.form-input {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

.form-input::placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 套餐选择样式 */
.package-list {
  margin: 16rpx 0;
}

.package-item {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 18rpx 16rpx;
  margin-bottom: 10rpx;
  transition: all 0.2s ease;
}

.package-item.selected {
  background: #fff;
  border: 2rpx solid rgba(7, 193, 96, 0.45);
  box-sizing: border-box;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}

.package-item:active {
  transform: scale(0.98);
}

.package-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.package-name {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
}

.package-price {
  color: #d46b08;
  font-size: 36rpx;
  font-weight: 700;
}

.package-desc {
  color: #666;
  font-size: 24rpx;
  line-height: 1.4;
}

