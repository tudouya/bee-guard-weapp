.container { 
  display: block;
  padding: 0;
  height: auto;
  box-sizing: border-box;
  background: #f3f3f3; 
}
.content { padding: 8rpx 16rpx 0; }

.proof-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
  padding: 24rpx 16rpx;
}
.header { margin-bottom: 16rpx; }
.title { font-size: 34rpx; font-weight: 600; color: #333; }
.subtitle { display: block; margin-top: 6rpx; font-size: 24rpx; color: #999; }
.section { margin: 12rpx 0 20rpx; }
.section-title { font-size: 30rpx; color: #333; font-weight: 600; margin-bottom: 12rpx; }
.section-body { display: flex; flex-direction: column; gap: 16rpx; }
.divider { height: 1rpx; background: #f0f0f0; margin: 8rpx 0 12rpx; }

.form-item {}
.form-label { font-size: 28rpx; color: #333; margin-bottom: 10rpx; }
.input-wrap { background: #f7f7f7; border-radius: 36rpx; height: 72rpx; padding: 0 16rpx; display: flex; align-items: center; }
.input-wrap input { flex: 1; font-size: 30rpx; color: #333; }

/* 单选 chips 与多选一致大小 */
.radio-group { display: flex; flex-wrap: wrap; gap: 12rpx; }
.radio-chip {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 16rpx;
  background: #fff;
  border: 1rpx solid #e6e6e6;
  border-radius: 9999rpx;
}
.radio-chip .circle { width: 28rpx; height: 28rpx; border: 2rpx solid #c8c8c8; border-radius: 50%; margin-right: 10rpx; background: #fff; box-sizing: border-box; }
.radio-chip.checked { border-color: rgba(7,193,96,0.6); background: rgba(7,193,96,0.06); }
.radio-chip.checked .circle { border-color: #07c160; background: #07c160; }
.chip-text { font-size: 28rpx; color: #333; }

/* 图片上传 */
.images { display: flex; flex-wrap: wrap; gap: 12rpx; }
.img-item, .add-item { width: 200rpx; height: 200rpx; border-radius: 12rpx; overflow: hidden; background: #f7f7f7; position: relative; display: flex; align-items: center; justify-content: center; }
.img { width: 100%; height: 100%; }
.add-item { font-size: 64rpx; color: #bbb; border: 1rpx dashed #ddd; }
.del { position: absolute; top: 6rpx; right: 6rpx; width: 36rpx; height: 36rpx; border-radius: 18rpx; background: rgba(0,0,0,0.5); color: #fff; text-align: center; line-height: 36rpx; font-size: 26rpx; }
.textarea { width: 100%; min-height: 160rpx; background: #f7f7f7; border-radius: 12rpx; padding: 12rpx; font-size: 28rpx; color: #333; box-sizing: border-box; }
.actions { display: flex; flex-direction: column; gap: 10rpx; }
.actions button[disabled] { opacity: 0.5; }
