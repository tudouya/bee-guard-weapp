.container { 
  /* 覆盖全局 .container，去除固定内边距与高度，避免顶部空白 */
  display: block;
  padding: 0;
  height: auto;
  box-sizing: border-box;
  background: #f3f3f3; 
}
.content { padding: 8rpx 16rpx 0; }

.guide-card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08);
  padding: 24rpx 16rpx;
}

.header { margin-bottom: 16rpx; }
.title { font-size: 34rpx; font-weight: 600; color: #333; }
.subtitle { display: block; margin-top: 6rpx; font-size: 24rpx; color: #999; }

.section { margin: 12rpx 0 20rpx; }
.section-title { font-size: 30rpx; color: #333; font-weight: 600; margin-bottom: 12rpx; }
.section-block { background: #f7f7f7; border-radius: 12rpx; padding: 14rpx; margin-bottom: 12rpx; }
.section-block--highlight { background: rgba(255, 236, 228, 0.9); border: 2rpx solid #ff4c4c; }
.address-card { background: #f7f7f7; border-radius: 12rpx; padding: 16rpx; position: relative; }
.copy-btn { position: absolute; right: 16rpx; bottom: 16rpx; }

.item-title { font-size: 28rpx; color: #333; margin-bottom: 8rpx; }
.item-text { font-size: 26rpx; color: #666; line-height: 1.6; }
.item-text--highlight { font-size: 30rpx; color: #ff4c4c; font-weight: 600; }
.item-note { font-size: 22rpx; color: #999; line-height: 1.5; margin-top: 6rpx; }
