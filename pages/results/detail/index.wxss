.container { display: block; padding: 0; height: auto; box-sizing: border-box; background: #f3f3f3; }
.content { padding: 8rpx 16rpx 0; }

.card { background: #fff; border-radius: 16rpx; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); padding: 24rpx 20rpx; }
.header { margin-bottom: 16rpx; }
.title { font-size: 34rpx; font-weight: 700; color: #333; }
.subtitle { display: block; margin-top: 6rpx; font-size: 24rpx; color: #999; }

.section { margin: 20rpx 0 24rpx; }
.section-title { font-size: 30rpx; color: #333; font-weight: 600; margin-bottom: 14rpx; }
.row { font-size: 26rpx; color: #666; margin: 10rpx 0; display: flex; justify-content: space-between; }
.ellipsis { max-width: 60%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-align: right; }

.status { font-size: 22rpx; padding: 2rpx 10rpx; border-radius: 20rpx; }
.status-completed { background: #e8f5e8; color: #52c41a; }
.status-processing { background: #fff7e6; color: #faad14; }
.status-pending { background: #f0f0f0; color: #666; }
.status-received { background: #e6f4ff; color: #1677ff; }

.result-block { background: #f7f7f7; border-radius: 12rpx; padding: 16rpx; }
.muted { color: #999; font-size: 24rpx; }

