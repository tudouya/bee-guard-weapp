/* Matrix table styles aligned to Excel layout */
.summary-line { font-size: 26rpx; color: #333; margin-bottom: 10rpx; }
.pos-num { color: #ff4d4f; font-weight: 600; }
.pos-tags { display: flex; flex-wrap: wrap; gap: 10rpx; margin: 10rpx 0 8rpx; }
.pos-tag { font-size: 22rpx; color: #ff4d4f; background: #fff1f0; border: 1rpx solid #ffa39e; border-radius: 20rpx; padding: 4rpx 10rpx; }
.group-title { font-size: 26rpx; color: #666; margin: 14rpx 0 10rpx; }
.legend { display: flex; align-items: center; gap: 12rpx; margin: 10rpx 0 8rpx; }
.legend-label { font-size: 24rpx; color: #999; }
.table-scroll { width: 100%; overflow-x: auto; margin-bottom: 12rpx; }
.table-row { display: flex; }
.table-head { background: #fafafa; border: 1rpx solid #eee; border-bottom: 0; border-radius: 10rpx 10rpx 0 0; }
.cell { min-width: 140rpx; padding: 14rpx 10rpx; border: 1rpx solid #eee; border-left: 0; text-align: center; font-size: 26rpx; color: #333; }
.table-row .cell:first-child { border-left: 1rpx solid #eee; }
.cell--head { font-size: 24rpx; color: #666; font-weight: 600; }
.level-badge { display: inline-flex; align-items: center; justify-content: center; min-width: 56rpx; padding: 4rpx 10rpx; border-radius: 20rpx; font-size: 22rpx; line-height: 1; }
.level-weak { background: #fff7e6; color: #fa8c16; border: 1rpx solid #ffd591; }
.level-medium { background: #fff2e8; color: #fa541c; border: 1rpx solid #ffbb96; }
.level-strong { background: #fff1f0; color: #ff4d4f; border: 1rpx solid #ffa39e; }
.level-null { background: #f5f5f5; color: #999; border: 1rpx solid #e8e8e8; }

.promo-box { 
  background: rgba(7,193,96,0.06);
  border: 1rpx solid rgba(7,193,96,0.35);
  border-radius: 12rpx;
  padding: 14rpx;
  margin-bottom: 16rpx;
}
.promo-box:last-child { margin-bottom: 0; }
.rec-badge { display: inline-block; font-size: 20rpx; color: #07c160; background: #eafff3; border: 1rpx solid rgba(7,193,96,0.35); border-radius: 6rpx; padding: 2rpx 6rpx; margin-bottom: 6rpx; }
.rec-name { display: block; font-size: 28rpx; font-weight: 600; color: #333; margin-bottom: 6rpx; }
.rec-brief { font-size: 24rpx; color: #666; }
.action-section { margin-top: 24rpx; }
