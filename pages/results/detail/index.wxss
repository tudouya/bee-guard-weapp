.container { display: block; padding: 0; height: auto; box-sizing: border-box; background: #f3f3f3; }
.content { padding: 8rpx 16rpx 0; }

.card { background: #fff; border-radius: 16rpx; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); padding: 24rpx 20rpx; }
.header { margin-bottom: 16rpx; }
.title { font-size: 34rpx; font-weight: 700; color: #333; }
.subtitle { display: block; margin-top: 6rpx; font-size: 24rpx; color: #999; }

.section { margin: 20rpx 0 24rpx; }
.section-title { font-size: 30rpx; color: #333; font-weight: 600; margin-bottom: 14rpx; }
.row { font-size: 26rpx; color: #666; margin: 10rpx 0; display: flex; justify-content: space-between; }
.row-value--pending { color: #999; }
.ellipsis { max-width: 60%; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; text-align: right; }

.status { font-size: 22rpx; padding: 2rpx 10rpx; border-radius: 20rpx; }
.status-completed { background: #e8f5e8; color: #52c41a; }
.status-processing { background: #fff7e6; color: #faad14; }
.status-pending { background: #f0f0f0; color: #666; }
.status-received { background: #e6f4ff; color: #1677ff; }

.result-block { background: #f7f7f7; border-radius: 12rpx; padding: 16rpx; }
.muted { color: #999; font-size: 24rpx; }

/* 清理未使用的旧版结果列表样式（diseases/disease 等） */

/* Matrix table styles aligned to Excel layout */
.summary-line { font-size: 26rpx; color: #333; margin-bottom: 10rpx; }
.pos-num { color: #ff4d4f; font-weight: 600; }
.pos-tags { display: flex; flex-wrap: wrap; gap: 10rpx; margin: 10rpx 0 8rpx; }
.pos-tag { font-size: 22rpx; color: #ff4d4f; background: #fff1f0; border: 1rpx solid #ffa39e; border-radius: 20rpx; padding: 4rpx 10rpx; }
.group-tabs { display: flex; background: #f5f6f8; border-radius: 999rpx; padding: 6rpx; margin: 18rpx 0 12rpx; }
.group-tab { flex: 1; text-align: center; font-size: 24rpx; color: #666; padding: 10rpx 0; border-radius: 999rpx; transition: all 0.2s ease; }
.group-tab--active { background: #fff; color: #1677ff; font-weight: 600; box-shadow: 0 4rpx 10rpx rgba(22,119,255,0.15); }
.group-list { border: 1rpx solid #eef0f2; border-radius: 14rpx; overflow: hidden; background: #fff; }
.group-row { display: flex; align-items: center; justify-content: space-between; padding: 18rpx 20rpx; }
.group-row + .group-row { border-top: 1rpx solid #f0f0f0; }
.group-name { flex: 1; font-size: 28rpx; color: #333; line-height: 1.4; padding-right: 16rpx; word-break: break-all; }
.level-badge { display: inline-flex; align-items: center; justify-content: center; min-width: 80rpx; padding: 8rpx 18rpx; border-radius: 999rpx; font-size: 24rpx; line-height: 1; }
.level-weak { background: #fff7e6; color: #fa8c16; border: 1rpx solid #ffd591; }
.level-medium { background: #fff2e8; color: #fa541c; border: 1rpx solid #ffbb96; }
.level-strong { background: #fff1f0; color: #ff4d4f; border: 1rpx solid #ffa39e; }
.level-null { background: #f5f5f5; color: #999; border: 1rpx solid #e8e8e8; }
.level-present { background: #eafff3; color: #07c160; border: 1rpx solid rgba(7,193,96,0.35); }
.level-absent { background: #f5f5f5; color: #999; border: 1rpx solid #e8e8e8; }
.level-unknown { background: #fff7e6; color: #faad14; border: 1rpx solid #ffd591; }

.promo-box { 
  background: rgba(7,193,96,0.06);
  border: 1rpx solid rgba(7,193,96,0.35);
  border-radius: 12rpx;
  padding: 14rpx;
  margin-bottom: 16rpx;
}
.promo-box:last-child { margin-bottom: 0; }
.rec-badge { display: inline-block; font-size: 20rpx; color: #07c160; background: #eafff3; border: 1rpx solid rgba(7,193,96,0.35); border-radius: 6rpx; padding: 2rpx 6rpx; margin-bottom: 6rpx; }
.rec-name { display: block; font-size: 28rpx; font-weight: 600; color: #333; margin-bottom: 6rpx; }
.rec-brief { font-size: 24rpx; color: #666; }
.pending-tip { margin-top: 8rpx; }
.pending-box { background: #e6f4ff; border: 1rpx solid rgba(22,119,255,0.25); border-radius: 12rpx; padding: 20rpx; display: flex; flex-direction: column; gap: 16rpx; }
.pending-title { font-size: 28rpx; font-weight: 600; color: #1677ff; }
.pending-text { font-size: 24rpx; color: #666; line-height: 1.5; }
.pending-box .u-btn { align-self: stretch; }
