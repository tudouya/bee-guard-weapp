page {
  background: #f3f3f3;
}

.enterprise-list {
  padding: 24rpx 16rpx 64rpx;
  box-sizing: border-box;
}

.enterprise-hero {
  background: linear-gradient(135deg, #07c160 0%, #1bd38c 60%, #eafff3 100%);
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  color: #ffffff;
  box-shadow: 0 12rpx 32rpx rgba(7, 193, 96, 0.18);
  margin-bottom: 28rpx;
}

.enterprise-hero__title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.enterprise-hero__desc {
  font-size: 26rpx;
  line-height: 1.6;
  opacity: 0.92;
}

.enterprise-hero__tips {
  margin-top: 18rpx;
  font-size: 24rpx;
  opacity: 0.85;
}

.enterprise-error,
.enterprise-empty {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  color: #666c72;
  margin-bottom: 28rpx;
}

.enterprise-error__btn {
  margin: 24rpx auto 0;
}

.enterprise-empty__icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 16rpx;
}

.enterprise-empty__text {
  font-size: 30rpx;
  color: #323539;
  display: block;
}

.enterprise-empty__hint {
  margin-top: 8rpx;
  font-size: 24rpx;
}

.enterprise-cards {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.enterprise-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.05);
}

.enterprise-card__header {
  display: flex;
  gap: 24rpx;
  align-items: flex-start;
}

.enterprise-card__logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background: #f1f5f8;
  flex-shrink: 0;
}

.enterprise-card__text {
  flex: 1;
  display: flex;
  flex-direction: column;
  height: 120rpx;
  min-height: 120rpx;
  justify-content: space-between;
  gap: 0;
  padding-top: 4rpx;
  overflow: hidden;
}

.enterprise-card__name {
  font-size: 32rpx;
  font-weight: 600;
  color: #14171a;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.enterprise-card__qualifications {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx 12rpx;
}

.enterprise-card__tag {
  font-size: 22rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.12);
  padding: 6rpx 18rpx;
  border-radius: 24rpx;
  line-height: 1.4;
}

.enterprise-card__coverage {
  font-size: 24rpx;
  color: #6e757b;
}

.enterprise-card__summary {
  display: none;
}

.enterprise-card__cta {
  display: none;
}

.enterprise-loading,
.enterprise-footnote {
  text-align: center;
  color: #6e757b;
  font-size: 24rpx;
  margin-top: 24rpx;
}

.enterprise-loading {
  color: #07c160;
}
