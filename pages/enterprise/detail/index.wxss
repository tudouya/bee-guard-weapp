page {
  background: #f3f3f3;
}

.enterprise-detail {
  padding: 24rpx 16rpx 64rpx;
  box-sizing: border-box;
}

.enterprise-loading-card,
.enterprise-error {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  color: #6e757b;
  margin-bottom: 28rpx;
}

.enterprise-error__btn {
  margin: 24rpx auto 0;
}

.enterprise-header {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
  align-items: center;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 28rpx;
}

.enterprise-header__logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 28rpx;
  background: #f1f5f8;
}

.enterprise-header__meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.enterprise-header__name {
  font-size: 36rpx;
  font-weight: 700;
  color: #14171a;
}

.enterprise-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.04);
}

.enterprise-section__title {
  font-size: 30rpx;
  font-weight: 600;
  color: #14171a;
  margin-bottom: 20rpx;
}

.enterprise-section__content {
  font-size: 26rpx;
  line-height: 1.7;
  color: #34393d;
}

.enterprise-service {
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  background: #f7faf9;
  margin-bottom: 12rpx;
  display: flex;
  gap: 16rpx;
}

.enterprise-service:last-child {
  margin-bottom: 0;
}

.enterprise-service__bullet {
  font-size: 26rpx;
  font-weight: 600;
  color: #07c160;
  line-height: 1.6;
}

.enterprise-service__text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #34393d;
}

.enterprise-certifications {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.enterprise-certifications__item {
  padding: 10rpx 18rpx;
  background: #f2f5f7;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #4c5257;
}

.enterprise-promotions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.enterprise-promotions__item {
  padding: 16rpx 20rpx;
  background: rgba(255, 198, 120, 0.18);
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #ff7f00;
  line-height: 1.6;
}

.enterprise-contact {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.04);
}

.enterprise-contact__meta {
  font-size: 26rpx;
  color: #34393d;
  line-height: 1.6;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.enterprise-contact__actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  margin: 24rpx 0 12rpx;
}

.enterprise-contact__hint {
  font-size: 22rpx;
  color: #8f9498;
}
