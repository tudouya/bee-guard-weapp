page {
  background: #f3f3f3;
}

.enterprise-detail {
  padding: 24rpx 16rpx 64rpx;
  box-sizing: border-box;
}

.enterprise-loading-card,
.enterprise-error {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  text-align: center;
  color: #6e757b;
  margin-bottom: 28rpx;
}

.enterprise-error__btn {
  margin: 24rpx auto 0;
}

.enterprise-header {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  gap: 24rpx;
  align-items: center;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 28rpx;
}

.enterprise-header__logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 28rpx;
  background: #f1f5f8;
}

.enterprise-header__meta {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.enterprise-header__name {
  font-size: 36rpx;
  font-weight: 700;
  color: #14171a;
}

.enterprise-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.04);
}

.enterprise-section__title {
  font-size: 30rpx;
  font-weight: 600;
  color: #14171a;
  margin-bottom: 20rpx;
}

.enterprise-section__content {
  font-size: 26rpx;
  line-height: 1.7;
  color: #34393d;
}

.enterprise-service {
  border-radius: 20rpx;
  padding: 16rpx 20rpx;
  background: #f7faf9;
  margin-bottom: 12rpx;
  display: flex;
  gap: 16rpx;
}

.enterprise-service:last-child {
  margin-bottom: 0;
}

.enterprise-service__bullet {
  font-size: 26rpx;
  font-weight: 600;
  color: #07c160;
  line-height: 1.6;
}

.enterprise-service__text {
  flex: 1;
  font-size: 26rpx;
  line-height: 1.6;
  color: #34393d;
}

.enterprise-qualification {
  background: rgba(74, 122, 230, 0.08);
}

.enterprise-qualification__bullet {
  color: #4a7ae6;
}

.enterprise-qualification__text {
  color: #324158;
}

.enterprise-promotion-card {
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, rgba(255, 194, 126, 0.32) 0%, rgba(255, 233, 209, 0.52) 100%);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.enterprise-promotion-card:last-child {
  margin-bottom: 0;
}

.enterprise-promotion-card__content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.enterprise-promotion-card__line {
  font-size: 26rpx;
  line-height: 1.8;
  color: #4a3321;
  word-break: break-all;
}

.enterprise-contact {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.04);
}

.enterprise-contact__meta {
  font-size: 26rpx;
  color: #34393d;
  line-height: 1.6;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.enterprise-contact__actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  margin: 24rpx 0 12rpx;
}

.enterprise-contact__hint {
  font-size: 22rpx;
  color: #8f9498;
}
