}

.home-section-header__content {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 24rpx;
}

.home-section-header__left {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.home-section-header__label {
    width: 8rpx;
    height: 32rpx;
    background: rgba(255,255,255,0.85);
    border-radius: 2rpx;
