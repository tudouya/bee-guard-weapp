    gap: 6rpx;
    color: #ffffff;
}

.home-section-header__title {
    font-size: 32rpx;
    font-weight: 600;
}

.home-section-header__subtitle {
    font-size: 24rpx;
    color: rgba(255,255,255,0.92);
}

