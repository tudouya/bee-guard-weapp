/**index.wxss**/

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 80rpx 60rpx 120rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 120rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.version {
  font-size: 28rpx;
  color: #999;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.welcome {
  text-align: center;
  margin-bottom: 120rpx;
}

.welcome-text {
  display: block;
  font-size: 36rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.welcome-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.actions {
  width: 100%;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.footer {
  text-align: center;
  margin-top: 80rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}