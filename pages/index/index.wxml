<view class="home">
    <view class="home-img"></view>
    <view class="home-content">
        <view class="home-detail">
            <view class="home-header">
                <view class="home-search">
                    <image class="home-search-icon" src="/images/common/search.png"></image>
                    <input disabled bindtap="handleChange" placeholder="搜索热门新闻"></input>
                </view>
            </view>
            <view class="home-rotation-chart">
                <swiper class="home-banner-swiper" indicator-dots="true" autoplay="true" circular="true" interval="5000" duration="800" indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#ffffff">
                    <block wx:for="{{bannerSlides}}" wx:key="id">
                        <swiper-item>
                            <view class="banner-card {{item.gradient}}">
                                <view class="banner-texts">
                                    <text class="banner-title">{{item.title}}</text>
                                    <text class="banner-sub">{{item.subtitle}}</text>
                                </view>
                                <view class="banner-badge">{{item.badge}}</view>
                                <!-- 插画层：雷达 + 图表 + 盾牌 + 本地蜜蜂插画 -->
                                <view class="banner-graphics">
                                    <!-- 雷达监控波纹（多处分布） -->
                                    <view class="radar radar-a">
                                        <view class="ring r1"></view>
                                        <view class="ring r2"></view>
                                        <view class="ring r3"></view>
                                        <view class="radar-dot"></view>
                                    </view>
                                    <view class="radar radar-b">
                                        <view class="ring r1"></view>
                                        <view class="ring r2"></view>
                                        <view class="ring r3"></view>
                                        <view class="radar-dot"></view>
                                    </view>
                                    <view class="radar radar-c">
                                        <view class="ring r1"></view>
                                        <view class="ring r2"></view>
                                        <view class="ring r3"></view>
                                        <view class="radar-dot"></view>
                                    </view>
                                    <!-- 简易柱状图趋势 -->
                                    <view class="chart">
                                        <view class="bar b1"></view>
                                        <view class="bar b2"></view>
                                        <view class="bar b3"></view>
                                        <view class="bar b4"></view>
                                    </view>
                                    <!-- 盾牌防控图标 -->
                                    <view class="shield">
                                        <view class="shield-mark"></view>
                                    </view>
                                    <!-- 额外雷达点位（底部随机分布） -->
                                    <view class="radar radar-d">
                                        <view class="ring r1"></view>
                                        <view class="ring r2"></view>
                                        <view class="ring r3"></view>
                                        <view class="radar-dot"></view>
                                    </view>
                                    <view class="radar radar-e">
                                        <view class="ring r1"></view>
                                        <view class="ring r2"></view>
                                        <view class="ring r3"></view>
                                        <view class="radar-dot"></view>
                                    </view>
                                    <!-- 底部居中雷达点位 -->
                                    <view class="radar radar-f">
                                        <view class="ring r1"></view>
                                        <view class="ring r2"></view>
                                        <view class="ring r3"></view>
                                        <view class="radar-dot"></view>
                                    </view>
                                    <!-- 本地蜜蜂插画图片（替代 CSS 蜜蜂） -->
                                    <image class="banner-bee" src="/images/banner_bee.png" mode="widthFix" aria-hidden="true"></image>
                                </view>
                            </view>
                        </swiper-item>
                    </block>
                </swiper>
            </view>
            <view class="home-list">
                <view bindtap="handleDetection" class="home-list-item">
                    <image src="/images/home-feature-detection.png"></image>
                    <text>样品检测</text>
                </view>
                <view bindtap="handleEpidemic" class="home-list-item">
                    <image src="/images/home-feature-epidemic.png"></image>
                    <text>疫情通报</text>
                </view>
                <view bindtap="handleKnowledge" class="home-list-item">
                    <image src="/images/home-feature-knowledge.png"></image>
                    <text>防控知识</text>
                </view>
                <!-- 新增三个功能板块：企业展示、产品推荐、答疑解惑（图标复用） -->
                <view bindtap="handleEnterprise" class="home-list-item">
                    <image src="/images/home-feature-enterprise.png"></image>
                    <text>企业展示</text>
                </view>
                <view bindtap="handleProduct" class="home-list-item">
                    <image src="/images/home-feature-product.png"></image>
                    <text>产品推荐</text>
                </view>
                <view bindtap="handleQna" class="home-list-item">
                    <image src="/images/home-feature-qna.png"></image>
                    <text>答疑解惑</text>
                </view>
            </view>
            <view class="home-fire">
                <view class="home-section-header home-section-header--inline">
                    <view class="home-section-header__overlay"></view>
                    <view class="home-section-header__content">
                        <view class="home-section-header__left">
                            <view class="home-section-header__label"></view>
                            <view class="home-section-header__titles">
                                <text class="home-section-header__title">防控知识热门</text>
                                <text class="home-section-header__subtitle" wx:if="{{num}}">{{num}}人正在学习</text>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="home-fire-con">
                    <view bindtap="handleTopicFireInfo" class="home-fire-con-list" data-id="{{item.problem_id}}" wx:for="{{topicHost}}" wx:key="index">
                        <image class="home-fire-con-list-num" src="/images/home/rank-1.png" wx:if="{{index===0}}"></image>
                        <image class="home-fire-con-list-num" src="/images/home/rank-2.png" wx:if="{{index===1}}"></image>
                        <image class="home-fire-con-list-num" src="/images/home/rank-3.png" wx:if="{{index===2}}"></image>
                        <image class="home-fire-con-list-num" src="/images/home/rank-4.png" wx:if="{{index===3}}"></image>
                        <view class="home-fire-con-list-title">{{item.problem_content}}</view>
                        <image class="home-fire-con-list-fire" src="/images/home/rank-fire.png"></image>
                        <view class="home-fire-con-list-com">{{item.num}} · 关注</view>
                    </view>
                </view>
            </view>
            <view class="home-section">
                <view class="home-section-header home-section-header--inline">
                    <view class="home-section-header__overlay"></view>
                    <view class="home-section-header__content">
                        <view class="home-section-header__left">
                            <view class="home-section-header__label"></view>
                            <view class="home-section-header__titles">
                                <text class="home-section-header__title">疫情监测快报</text>
                                <text class="home-section-header__subtitle">疫情动态 实时发布</text>
                            </view>
                        </view>
                        <view class="home-section-header__spacer"></view>
                    </view>
                </view>
                <view class="home-industry">
                    <view class="home-industry-content">
                        <view bindtap="handleIndustryInfo" class="home-industry-list" data-id="{{item.consult_id}}" wx:for="{{infoData}}" wx:key="index">
                            <view class="home-industry-left">
                                <view class="home-industry-left-desc">{{item.consult_title}}</view>
                                <view class="home-industry-left-type">{{item.type_name}}</view>
                            </view>
                            <image src="{{IP+item.image_url}}" wx:if="{{item.image_url}}"></image>
                            <image src="/images/common/placeholder-card.png" wx:else></image>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>
