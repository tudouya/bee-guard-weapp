.container { display:block; padding: 0; background:#f3f3f3; }
.content { padding: 0 16rpx; }
.card { background:#fff; border-radius: 16rpx; padding: 24rpx 16rpx; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); margin-top: 12rpx; }
.form-item { margin-bottom: 20rpx; }
.label { color:#333; margin-bottom: 8rpx; font-size: 30rpx; font-weight: 600; }
.input { width: 100%; box-sizing: border-box; background:#f7f7f7; border-radius: 12rpx; padding: 12rpx; min-height: 56rpx; }
.textarea { width: 100%; box-sizing: border-box; min-height: 200rpx; background:#f7f7f7; border-radius: 12rpx; padding: 12rpx; }
.uploader { display:flex; flex-wrap:wrap; gap: 12rpx; }
.thumb { width: 160rpx; height: 160rpx; position: relative; }
.img { width: 100%; height: 100%; border-radius: 8rpx; }
.del { position:absolute; right: 6rpx; top: 6rpx; width: 32rpx; height: 32rpx; background: rgba(0,0,0,0.6); color:#fff; border-radius: 50%; text-align:center; line-height:32rpx; }
.add { width:160rpx; height:160rpx; background:#f0f0f0; color:#999; border-radius: 8rpx; display:flex; align-items:center; justify-content:center; font-size: 40rpx; }
