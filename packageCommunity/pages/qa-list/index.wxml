<view class="container">
  <view class="content">
    <view class="tabs">
      <view class="tab-item" data-key="disease" bindtap="switchTab">蜂病百科</view>
      <view class="tab-item active" data-key="qa" bindtap="switchTab">蜂农提问</view>
      <view class="tab-item" data-key="share" bindtap="switchTab">经验分享</view>
    </view>
    <!-- 搜索栏 -->
    <view class="search">
      <view class="search-box">
        <image class="ico" src="https://dtm123.com:7803/targets/image/images/search.png"></image>
        <input class="ipt" placeholder="搜索热门话题" disabled />
      </view>
    </view>
    <!-- 话题筛选 Chips -->
    <view class="chips">
      <view class="chip active">全部</view>
      <view class="chip">蜂群动态</view>
      <view class="chip">其它</view>
      <view class="chip">问题咨询</view>
    </view>
    <!-- 统一列表样式：panel + cells + cell -->
    <view class="panel">
      <view class="cells">
        <view class="cell" wx:for="{{list}}" wx:key="id" bindtap="openDetail" data-id="{{item.id}}">
          <view class="cell-hd">
            <image class="avatar" src="https://dtm123.com:7803/targets/image/images/010.png"></image>
          </view>
          <view class="cell-main">
            <view class="row-head">
              <text class="nickname">{{item.author}}</text>
              <text class="tag">问题咨询</text>
            </view>
            <view class="date">{{item.date}}</view>
            <view class="bubble">{{item.title}}</view>
          </view>
          <view class="cell-aside">
            <view class="metric">13人参与话题</view>
          </view>
        </view>
      </view>
    </view>
    <!-- 悬浮发布按钮（右下） -->
    <view class="fab" bindtap="goPost" aria-label="发布问题">＋</view>
  </view>
</view>
