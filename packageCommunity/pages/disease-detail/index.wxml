<view class="container">
  <view class="data-list card">
    <view class="list-header">
      <text class="list-title">相关文章</text>
      <text class="list-count" wx:if="{{articleCount}}">共{{articleCount}}篇</text>
    </view>
    <view class="list-body" wx:if="{{loadingArticles}}">
      <text class="hint-text">加载中...</text>
    </view>
    <view class="list-body list-body--error" wx:elif="{{articleError}}">
      <text class="hint-text">{{articleError}}</text>
    </view>
    <view class="list-body" wx:elif="{{!preview.length}}">
      <text class="hint-text">暂无相关文章</text>
    </view>
    <block wx:else>
      <view class="article-item" wx:for="{{preview}}" wx:key="id" bindtap="openArticle" data-id="{{item.id}}">
        <view class="article-main">
          <text class="article-title">{{item.title}}</text>
          <text wx:if="{{item.brief}}" class="article-brief">{{item.brief}}</text>
          <view class="article-meta" wx:if="{{item.date}}">
            <text class="meta-date">{{item.date}}</text>
          </view>
        </view>
      </view>
    </block>
  </view>

</view>
