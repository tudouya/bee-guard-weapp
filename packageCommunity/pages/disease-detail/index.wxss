.container { display:block; padding: 0 16rpx; background: #f3f3f3; }
.card { background:#fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); margin-top: 12rpx; }
.data-list { padding: 16rpx; box-sizing: border-box; }
.list-header { display:flex; justify-content:space-between; align-items:center; margin-bottom: 12rpx; }
.list-title { font-size: 30rpx; color:#333; font-weight: 700; }
.list-count { font-size: 24rpx; color:#999; }
.list-body { padding: 24rpx 0; text-align:center; }
.list-body--error .hint-text { color:#ff4d4f; }
.hint-text { font-size: 24rpx; color:#999; }
.article-item { display:flex; justify-content:space-between; align-items:center; padding: 20rpx 0; border-bottom: 1rpx solid #f0f0f0; }
.article-item:last-child { border-bottom: none; }
.article-main { flex:1; min-width: 0; }
.article-title { font-size: 28rpx; color:#333; font-weight: 700; line-height: 1.4; }
.article-brief { margin-top: 6rpx; color:#666; font-size: 24rpx; display:-webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow:hidden; }
.article-meta { margin-top: 8rpx; font-size: 22rpx; color:#999; }
.meta-date { }
.article-arrow { margin-left: 16rpx; font-size: 28rpx; color:#ccc; }
