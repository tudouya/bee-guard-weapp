.container { display:block; padding: 0 16rpx; background: #f3f3f3; }
.card { background:#fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); margin-top: 12rpx; }
.card-hd { display:flex; justify-content:flex-start; margin-bottom: 6rpx; }
.badge { font-size: 22rpx; color:#07c160; background: rgba(7,193,96,0.12); padding: 4rpx 10rpx; border-radius: 999rpx; }
.title { font-size: 32rpx; font-weight: 700; color:#333; margin-bottom: 10rpx; }
.divider { height: 1rpx; background:#f0f0f0; margin: 4rpx 0 8rpx; }
.kv { margin-top: 8rpx; display:flex; align-items:flex-start; }
.k { color:#666; font-size: 26rpx; min-width: 160rpx; font-weight: 600; }
.v { color:#333; font-size: 28rpx; line-height: 1.6; flex:1; }
.section { margin-top: 12rpx; }
.section-hd { display:flex; justify-content:space-between; align-items:center; margin-bottom: 8rpx; }
.section-title { font-size: 28rpx; color:#333; font-weight: 700; }
.more { font-size: 24rpx; color:#07c160; }
.article-list { }
.article-item { padding: 14rpx; border: 1rpx solid #f0f0f0; border-radius: 12rpx; margin-top: 12rpx; box-shadow: 0 1rpx 4rpx rgba(0,0,0,0.04); }
.article-item:first-child { margin-top: 0; }
.a-title { font-size: 28rpx; color:#333; font-weight: 700; }
.a-brief { margin-top: 6rpx; color:#666; font-size: 24rpx; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; overflow:hidden; }
.a-meta { margin-top: 6rpx; color:#999; font-size: 22rpx; }
/* 操作区已移除 */
/* 顶部返回条 */
.backbar { padding: 12rpx 16rpx 0; }
