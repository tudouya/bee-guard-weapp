.container { padding: 16rpx; }
.toolbar { margin-bottom: 12rpx; display:flex; justify-content:flex-end; }
.list { background:#fff; border-radius: 16rpx; padding: 8rpx 16rpx; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); }
.item { padding: 16rpx 0; border-bottom:1rpx solid #f0f0f0; }
.item:last-child { border-bottom:none; }
.title { font-size: 28rpx; color:#333; margin-bottom:6rpx; }
.meta { font-size: 22rpx; color:#999; }
