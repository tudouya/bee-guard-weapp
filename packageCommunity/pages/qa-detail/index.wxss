.container { padding: 16rpx; }
.card { background:#fff; border-radius: 16rpx; padding: 24rpx 16rpx; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); margin-bottom: 12rpx; }
.title { font-size: 32rpx; font-weight:700; color:#333; }
.meta { margin-top: 6rpx; color:#999; font-size: 22rpx; }
.desc { margin-top: 12rpx; color:#555; font-size: 26rpx; line-height: 1.6; }
.sec-title { font-weight: 600; margin-bottom: 6rpx; color:#333; }
.suggest { color:#555; font-size: 26rpx; line-height: 1.6; }
.warn { border: 1rpx dashed #faad14; background: #fffbe6; }
