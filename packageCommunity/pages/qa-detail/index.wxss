.container { display:block; padding: 0; background:#f3f3f3; }
.content { padding: 0 16rpx 96rpx; }
/* 通用卡片（与列表卡一致） */
.card { background:#fff; border-radius: 24rpx; padding: 16rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.06); margin-top: 16rpx; }
/* 头部 */
.header { display:flex; align-items:center; justify-content:space-between; padding: 16rpx 0; }
.avatar { width: 64rpx; height: 64rpx; border-radius: 50%; background:#f0f0f0; }
.h-main { flex: 1; padding: 0 12rpx; }
.row { display:flex; align-items:center; gap: 12rpx; }
.nickname { font-size: 28rpx; color:#333; font-weight: 700; }
.tag { font-size: 22rpx; color:#ff8f1f; background: #fff5e6; padding: 4rpx 10rpx; border-radius: 999rpx; }
.date { margin-top: 4rpx; color:#999; font-size: 22rpx; }
.h-aside { color:#999; font-size: 22rpx; white-space: nowrap; }

/* 正文泡泡 */
.bubble.big { background:#f5f7fa; color:#333; font-size: 30rpx; line-height: 1.7; padding: 16rpx; border-radius: 12rpx; margin-top: 10rpx; }
.post-foot { display:flex; justify-content:flex-end; margin-top: 8rpx; }
.post-foot .metric { color:#999; font-size: 22rpx; }

/* 建议/审核 */
.panel { background:#fff; border-radius: 24rpx; padding: 16rpx; box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.06); margin-top: 16rpx; }
.sec-title { font-weight: 700; margin-bottom: 8rpx; color:#333; }
.suggest { color:#333; font-size: 30rpx; line-height: 1.7; }
.warn { border: 1rpx dashed #faad14; background: #fffbe6; }

/* 回复列表占位 */
.reply-title { margin-top: 18rpx; color:#666; font-size: 26rpx; }
.reply-card { }
.r-hd { display:flex; align-items:center; gap: 12rpx; }
.r-avatar { width: 48rpx; height: 48rpx; border-radius: 50%; background:#f0f0f0; }
.r-meta { display:flex; align-items:center; gap: 12rpx; }
.r-name { font-size: 26rpx; color:#333; font-weight: 600; }
.r-date { font-size: 22rpx; color:#999; }
.r-text { margin-top: 8rpx; color:#333; font-size: 28rpx; line-height: 1.6; }
.r-bubble { margin-top: 8rpx; background:#f5f7fa; color:#333; font-size: 26rpx; line-height: 1.6; padding: 12rpx; border-radius: 10rpx; }

/* 底部发布栏 */
.reply-bar { position: fixed; left: 0; right: 0; bottom: 0; background:#fff; padding: 10rpx 16rpx 16rpx; box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.06); display:flex; align-items:center; gap: 12rpx; }
.reply-input { flex:1; background:#f7f7f7; border-radius: 999rpx; padding: 0 16rpx; height: 64rpx; line-height: 64rpx; color:#333; }
.reply-btn { border-radius: 999rpx; }
/* 顶部返回条 */
.backbar { padding: 12rpx 0; }
